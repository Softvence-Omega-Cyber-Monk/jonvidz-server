enum MonitoringMode {
  Trach_Cool_Aerosol_Mist
  Trach_HME
}

model OffVentMonitoring {
  id String @id @default(uuid())

  monitoringMode MonitoringMode?
  withO2BleedIn  Boolean?

  // --- Physiological Parameters ---
  oto_low_l_min Decimal? @db.Decimal(5, 2) // e.g. 0.50 L/min
  spoto_percent Int?
  hr_bpm        Int?
  rr_bpm        Int?

  // --- Time Tracking ---
  startTime DateTime?
  endTime   DateTime?

  flowSheetId String    @unique
  flowSheet   FlowSheet @relation(fields: [flowSheetId], references: [id])
  // flowSheetId String
  // flowSheet   FlowSheet @relation(fields: [flowSheetId], references: [id])

  patientId String
  patient   Patient @relation(fields: [patientId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("offvent_monitoring")
}
