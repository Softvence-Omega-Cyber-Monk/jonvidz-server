enum MonitoringMode {
  Trach_Cool_Aerosol_Mist
  Trach_HME
}

model OffVentMonitoring {
  id String @id @default(uuid())

  monitoringMode MonitoringMode?
  withO2BleedIn  Boolean?

  // --- Physiological Parameters ---
  o2FlowLMin  Decimal? @db.Decimal(5, 2) // e.g. 0.50 L/min
  spO2Percent Int?
  hrBpm       Int?
  rrBpm       Int?

  // --- Time Tracking ---
  startTime DateTime?
  endTime   DateTime?

  flowSheetId String
  FlowSheet   FlowSheet @relation(fields: [flowSheetId], references: [id])

  patientId String
  patient   Patient @relation(fields: [patientId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("offvent_monitoring")
}
