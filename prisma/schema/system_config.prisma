// Monthly
enum ChartingPeriodTYpe {
  Daily
  Weekly
  Bi_Weekly
  Monthly
  Quarterly
}

model SystemConfig {
  /// Singleton primary key â€” we keep the default value 1 and use upsert to maintain one row.
  id              String              @id @default(uuid())
  defaultTimezone String?
  retentionDays   Int?
  chartingPeriod  ChartingPeriodTYpe?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_config")
}
