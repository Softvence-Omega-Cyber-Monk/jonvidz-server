// prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//medicalRecordNo
model DailySequence {
  date         String @id
  currentCount Int    @default(0)

  @@map("daily_sequence")
}

//staffRecordNo
model StaffSequence {
  id           String @id @default(uuid())
  key          String @unique
  currentCount Int    @default(0)

  @@map("staff_sequence")
}
