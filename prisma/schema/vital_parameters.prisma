enum VentMode {
  AC_VC
  SIMV
  PSV
  PCV
  CPAP
  BiPAP
}

enum TrachType {
  Shiley_Cuffed
  Shiley_Cuffess
  Shiley_Fenestrated
  Portex_Cuffed
  Portex_Cuffess
  Portex_Fenestrated
  Cuffed
  Uncuffed
  Fenestrated
  Cuffless
}

model VitalParameters {
  id String @id @default(uuid())

  hrBPM   Int?
  rrBPM   Int?
  spO2Pct Decimal? @db.Decimal(5, 2)

  ventMode  VentMode  @default(AC_VC)
  trachType TrachType @default(Cuffed)
  trachSize String?

  flowSheetId String    @unique
  FlowSheet   FlowSheet @relation(fields: [flowSheetId], references: [id], onDelete: Cascade)

  patientId String
  patient   Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("vital_parameters")
}
