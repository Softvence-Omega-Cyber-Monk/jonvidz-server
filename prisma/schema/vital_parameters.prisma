enum VentMode {
  AC_VC
  SIMV
  PSV
  PCV
  CPAP
  BiPAP
}

enum TrachType {
  Shiley_Cuffed
  Shiley_Cuffess
  Shiley_Fenestrated
  Portex_Cuffed
  Portex_Cuffess
  Portex_Fenestrated
  Cuffed
  Uncuffed
  Fenestrated
  Cuffless
}

enum TrachSize {
  TrachSize_3_0 @map("3.0")
  TrachSize_3_5 @map("3.5")
  TrachSize_4_0 @map("4.0")
  TrachSize_4_5 @map("4.5")
  TrachSize_5_0 @map("5.0")
  TrachSize_5_5 @map("5.5")
  TrachSize_6_0 @map("6.0")
  TrachSize_6_5 @map("6.5")
  TrachSize_7_0 @map("7.0")
  TrachSize_7_5 @map("7.5")
  TrachSize_8_0 @map("8.0")
  TrachSize_8_5 @map("8.5")
  TrachSize_9_0 @map("9.0")
}

model VitalParameters {
  id String @id @default(uuid())

  hrBPM   Int?
  rrBPM   Int?
  spO2Pct Decimal? @db.Decimal(5, 2)

  ventMode  VentMode   @default(AC_VC)
  trachType TrachType  @default(Cuffed)
  trachSize TrachSize? @default(TrachSize_3_0)

  flowSheetId String    @unique
  FlowSheet   FlowSheet @relation(fields: [flowSheetId], references: [id], onDelete: Cascade)

  patientId String
  patient   Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("vital_parameters")
}
