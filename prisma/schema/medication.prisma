enum MedicationRoute {
  ORAL
  NEB // Nebulizer
  IV // Intravenous
  IM // Intramuscular
  INHALED
  TOPICAL
}
model Medication {
  id           String          @id @default(uuid())
  name         String          @unique // Unique name to prevent duplicates
  standardDose String          @db.VarChar(100) // Stores the dose/unit string, e.g., "2.5 mg/3mL"
  route        MedicationRoute // References the enum

  // Optional: Timestamps for auditing
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("medications")
}
