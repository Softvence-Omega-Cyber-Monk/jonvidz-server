enum MedicationRoute {
  ORAL
  Nebulizer
  Intravenous
  Intramuscular
  INHALED
  TOPICAL
}

enum MadicationStatus {
  Given
  Not_Given
}

model Medication {
  id           String           @id @default(uuid())
  name         String           @unique
  standardDose String           @db.VarChar(100)
  route        MedicationRoute?

  patientId String?
  patient   Patient? @relation(fields: [patientId], references: [id], onDelete: Cascade)

  time_of_admanistative      DateTime?
  status                     MadicationStatus?
  administered_as_prescribed Boolean?
  // Optional: Timestamps for auditing
  createdAt                  DateTime          @default(now())
  updatedAt                  DateTime          @updatedAt
  MAR                        MAR[]

  @@map("medications")
}
