enum EquipmentFrequency {
  QDAY
  QWEEK
  QBI_WEEK
  QMONTH
  THREEMOS
  SIXTYMOS
  PRN
  ORAL
}

model Equipment {
  id                 String              @id @default(uuid())
  name               String
  standard_frequency EquipmentFrequency? @default(QDAY)
  notes_or_purpose   String?             @db.Text

  // Optional: Timestamps for auditing
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  assignEquipment AssignEquipment[]

  @@map("master_equipment_list")
}
