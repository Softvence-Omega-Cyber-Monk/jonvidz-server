// Reuse the same enum
enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPEND
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
  PATIENT
  DOCTOR
  NURSE
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  password     String
  firstName    String
  lastName     String?
  phone        String?
  profileImage String?
  role         UserRole   @default(USER)
  status       UserStatus @default(ACTIVE)
  staff        Staff?
  patient      Patient?
  lastLogin    DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("users")
}
