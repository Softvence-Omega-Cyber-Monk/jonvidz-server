enum ColorSecretionsDescription {
  CLEAR
  WHITE
  YELLOW
  BLOODY
}

enum ConsistencySecretionsDescription {
  THIN
  THICK
  TENACIOUS
}

enum AmountSecretionsDescription {
  SMALL
  MODERATE
  LARGE
}

model SecretionsDescription {
  id String @id @default(uuid())

  color       ColorSecretionsDescription?
  consistency ConsistencySecretionsDescription?
  amount      AmountSecretionsDescription?

  suctionLogId String     @unique
  SuctionLog   SuctionLog @relation(fields: [suctionLogId], references: [id], onDelete: Cascade)

  patientId String
  patient   Patient @relation(fields: [patientId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("secretions_description")
}
