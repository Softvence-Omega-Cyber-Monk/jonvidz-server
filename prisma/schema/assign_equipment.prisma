model ListOfEquipment {
  id               String  @id @default(uuid())
  comments         String? @db.Text
  signature        String? @db.Text
  time_of_record   String?
  full_e_cylinder  String?
  empty_e_cylinder String?

  patientCareAssignmentId String                @unique
  patientCareAssignment   PatientCareAssignment @relation(fields: [patientCareAssignmentId], references: [id], onDelete: Cascade)

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  patientId String?
  patient   Patient? @relation(fields: [patientId], references: [id], onDelete: Cascade)

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  assignEquipment AssignEquipment[]

  @@map("list_equipment")
}

model AssignEquipment {
  id     String    @id @default(uuid())
  date   DateTime?
  status String?

  equipmentId String
  equipment   Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  listOfEquipmentId String
  listOfEquipment   ListOfEquipment @relation(fields: [listOfEquipmentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("assign_equipment")
}
